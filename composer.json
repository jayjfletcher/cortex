{
    "name": "jayi/cortex",
    "description": "A Laravel package",
    "keywords": ["laravel", "package"],
    "homepage": "https://github.com/jayi/cortex",
    "license": "MIT",
    "authors": [
        {
            "name": "Jay Fletcher",
            "email": "jayjfletcher@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "fakerphp/faker": "^1.24",
        "laravel/pint": "^1.27",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "JayI\\Cortex\\": "src/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JayI\\Cortex\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-vendor-repository-package --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "test-coverage-herd": "herd coverage ./vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "cghooks": "vendor/bin/cghooks"
    },
    "extra": {
        "laravel": {
            "providers": [
                "JayI\\Cortex\\CortexServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
